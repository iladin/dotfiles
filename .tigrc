#bind main G !@hub browse -- commit/%(commit)
#bind diff G !@hub browse -- commit/%(commit)

bind generic G none
# alias vim-like behavior
bind main g move-first-line
bind main G move-last-line

set split-view-height = 80%
set diff-context = 5
set main-view = line-number:yes,interval=5 id:yes date:default author:abbreviated commit-title:yes,graph,refs,overflow=no

bind diff ; view-next
bind diff l scroll-right
bind diff h scroll-left


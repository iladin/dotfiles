# fix garish, unreadable green and yellow node segment colours
#POWERLEVEL9K_MODE='awesome-fontconfig'
#POWERLEVEL9K_MODE='awesome-patched' #If you chose to use already patched fonts, use instead :
POWERLEVEL9K_MODE='compatible' # This option is best if you prefer not to install additional fonts.
#POWERLEVEL9K_MODE='flat' # Note that if you prefer flat segment transitions, you can use the following with Awesome Powerline Fonts installed:

POWERLEVEL9K_DIR_HOME_FOREGROUND="white"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="white"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="white"

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(os_icon dir vcs)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status history time ram)
POWERLEVEL9K_PROMPT_ON_NEWLINE=true

POWERLEVEL9K_SHORTEN_DIR_LENGTH=1
POWERLEVEL9K_SHORTEN_DELIMITER=""
POWERLEVEL9K_SHORTEN_STRATEGY="truncate_from_right"

POWERLEVEL9K_OS_ICON_BACKGROUND="white"
POWERLEVEL9K_OS_ICON_FOREGROUND="blue"

zplugin load "bhilburn/powerlevel9k" #, of:powerlevel9k.zsh-theme
